# Production Environment Configuration
USE_SSL=true
PUBLIC_HOST=your-domain.com
AUTH_TOKEN=your-secret-token-change-this

# Server Configuration
WS_PORT=8765
HTTP_PORT=8081
HOST=0.0.0.0

# SSL Configuration
SSL_CERT_FILE=certs/server.crt
SSL_KEY_FILE=certs/server.key
SSL_CA_CERT_FILE=certs/ca.crt

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/pytunnel.log

# Security
MAX_CONNECTIONS=1000
RATE_LIMIT=100
TIMEOUT=30

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
