# Production Environment Configuration
# Copy this file to .env.production and update values

# Server Configuration
NODE_ENV=production
USE_SSL=true
PUBLIC_HOST=your-domain.com
AUTH_TOKEN=your-super-secure-auth-token-here

# Logging
LOG_LEVEL=INFO

# Connection Limits
MAX_CONNECTIONS=1000
HEARTBEAT_INTERVAL=30
CONNECTION_TIMEOUT=300

# Redis Configuration
REDIS_PASSWORD=your-redis-password-here
REDIS_HOST=redis
REDIS_PORT=6379

# Monitoring
GRAFANA_PASSWORD=your-grafana-admin-password-here

# SSL/TLS Configuration
SSL_CERT_FILE=/app/certs/server.crt
SSL_KEY_FILE=/app/certs/server.key
SSL_VERIFY=true

# Security
ALLOWED_ORIGINS=*
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Performance
WORKER_PROCESSES=4
MAX_WORKERS=8
