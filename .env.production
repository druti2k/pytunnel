# Test Environment Configuration for Production Setup
# Use this for testing the production Docker setup

# Server Configuration
NODE_ENV=production
USE_SSL=true
PUBLIC_HOST=localhost
AUTH_TOKEN=test-auth-token-12345

# Logging
LOG_LEVEL=INFO

# Connection Limits
MAX_CONNECTIONS=1000
HEARTBEAT_INTERVAL=30
CONNECTION_TIMEOUT=300

# Redis Configuration
REDIS_PASSWORD=test-redis-password-12345
REDIS_HOST=redis
REDIS_PORT=6379

# Monitoring
GRAFANA_PASSWORD=admin123

# SSL/TLS Configuration
SSL_CERT_FILE=/app/certs/server.crt
SSL_KEY_FILE=/app/certs/server.key
SSL_VERIFY=true

# Security
ALLOWED_ORIGINS=*
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Performance
WORKER_PROCESSES=4
MAX_WORKERS=8
